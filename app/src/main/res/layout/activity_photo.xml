<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bk_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PhotoActivity">

    <include
        android:id="@+id/include_web"
        layout="@layout/activity_tabbar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="469dp" />

    <ImageView
        android:id="@+id/vw_img"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="#CCFFFFFF"
        android:scaleType="fitXY"
        android:src="@mipmap/insect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:background="@color/bk_photo_btn"
        android:layout_height="wrap_content"
        android:text="立即拍照"
        app:layout_constraintTop_toBottomOf="@+id/vw_img"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="88dp"
        android:text="使用说明：\n    用户点击立即拍照，可以选择使用手机自带相机
或者从相册中选择图片进行传输操作，本软件只需登录一次不需重复登入，如果想更改账号请点击右上角退出注销账户。"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/txt_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="188dp"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>