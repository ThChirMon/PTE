<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PhotoActivity">

    <include layout="@layout/activity_tabbar" android:id="@+id/include_web"></include>
    <ImageView
        android:id="@+id/vw_img"
        android:layout_width="181dp"
        android:layout_height="178dp"
        android:background="#CCFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.224"
        tools:srcCompat="@tools:sample/avatars" />


    <Button
        android:id="@+id/btn_photo"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="45dp"
        android:text="拍照"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="68dp" />

    <Button
        android:id="@+id/btn_gallery"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="45dp"
        android:text="图库"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="68dp" />

    <TextView
        android:id="@+id/intro"
        android:layout_width="366dp"
        android:layout_height="196dp"
        android:lineSpacingExtra="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


    <TextView
        android:id="@+id/flower_name"
        android:layout_width="139dp"
        android:layout_height="64dp"
        android:layout_marginTop="48dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/vw_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="152dp"
        android:layout_marginRight="152dp"
        android:text="种类介绍："
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vw_img" />

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="查看详情"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro" />


</androidx.constraintlayout.widget.ConstraintLayout>